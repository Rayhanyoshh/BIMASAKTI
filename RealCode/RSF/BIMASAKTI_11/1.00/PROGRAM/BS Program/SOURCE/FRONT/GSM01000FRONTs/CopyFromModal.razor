@inherits R_Page
@attribute [R_BlazorFrontEnd.Controls.Attributes.R_Page(Title = "Company List")]
@using GSM01000Common.DTOs
@using GSM01000FrontResources;
@using R_BlazorFrontEnd.Interfaces;
@inject R_ILocalizer<ResourcesDummyCls> _localizer

<R_StackLayout>
    <R_Grid @ref="@_gridRef"
            DataSource="@_GSM01000ViewModel.loCompanyList"
            Pageable="true"
            R_ConductorGridSource="@_conGridCompanyRef"
            R_GridType="@R_eGridType.Original"
            AllowAddNewRow="false"
            AllowEditRow="false"
            AllowDeleteRow="false"
            R_ServiceGetListRecord="@Grid_R_ServiceGetListRecord">
        <R_GridColumns>
            <R_GridTextColumn FieldName=@nameof(CopyFromProcessCompanyDTO.CCOMPANY_ID) HeaderText=@_localizer["_companyID"]></R_GridTextColumn>
            <R_GridTextColumn FieldName=@nameof(CopyFromProcessCompanyDTO.CCOMPANY_NAME) HeaderText=@_localizer["_companyName"]></R_GridTextColumn>
        </R_GridColumns>
    </R_Grid>
    <R_StackLayout Row="true" Spacing="3">

        <R_ItemLayout xs="2">
            <R_Button R_ConductorGridSource="_conGridCompanyRef" OnClick="OnProcess">@_localizer["_process"]</R_Button>
        </R_ItemLayout>

        <R_ItemLayout xs="2">
            <R_Button R_ConductorGridSource="_conGridCompanyRef" OnClick="OnClose"> @_localizer["_cancel"]</R_Button>
        </R_ItemLayout>

    </R_StackLayout>
</R_StackLayout>

<R_ConductorGrid @ref="@_conGridCompanyRef"
                 R_ViewModel="@_GSM01000ViewModel"
                 R_IsHeader="true"
></R_ConductorGrid>