 @page "/GSM07500" 
@using GSM07500Model.ViewModel
@using GSM07500Common.DTOs
 @using System.Globalization
 @using GSM07500FrontResources;
 @using R_BlazorFrontEnd.Interfaces;
 @inject R_ILocalizer<ResourcesDummyCls> _localizer

@inherits R_Page

<R_StackLayout Style="width: 1000px">

<R_StackLayout Row="true">
    <R_StackLayout Class="me-5 mt-5">
        <R_Grid @ref="@_gridPeriodRef"
                DataSource="@_GSM07510ViewModel.loGridPeriodList"
                Pageable="true"
                R_ConductorSource="@_conductorGridPeriodRef"
                R_GridType="@R_eGridType.Navigator"
                R_ServiceGetListRecord="@GridPeriod_R_ServiceGetListRecord"
                AllowAddNewRow="false"
                AllowDeleteRow="false"
                AllowEditRow="false"
                Enabled="true"
                Width="250px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CYEAR" HeaderText=@_localizer["_yearPeriod"]  R_EnableAdd="false" R_EnableEdit="false" />
       
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>
    
    <R_StackLayout>
            <R_StackLayout Row="true" Class="mb-1">
            <R_ItemLayout col="1" >
                <R_Label>@_localizer["_yearPeriod"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_TextBox @bind-Value="@_GSM07510ViewModel.Data.CYEAR"
                           R_ConductorSource="@_conductorGridPeriodRef"
                           R_EnableOther="false"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>
    
        
        <R_StackLayout Row="true" Class="me-3">
            <R_Grid @ref="@_gridPeriodDetailRef"
                    DataSource="@_GSM07500ViewModel.loGridPeriodDetailList"
                    Pageable="true"
                    R_ConductorGridSource="@_conductorGridPeriodDetailRef"
                    R_GridType="@R_eGridType.Batch"
                    R_ServiceGetListRecord="@GridPeriodDetail_R_ServiceGetListRecord"
                    AllowAddNewRow="false"
                    AllowEditRow="false"
                    AllowDeleteRow="false"
                    PageSize="12"
                    Width="1000px">
                <R_GridColumns>
                    <R_GridTextColumn FieldName="@nameof(_GSM07500ViewModel.loEntity.CPERIOD_NO)" HeaderText=@_localizer["_no"]  R_EnableAdd="false" R_EnableEdit="false" Width="20px"/>
                    <R_GridDatePickerColumn FieldName="@nameof(_GSM07500ViewModel.loEntity.DSTART_DATE)" HeaderText=@_localizer["_startDate"] R_EnableAdd="false" R_EnableEdit="false" Width="50px"/>
                    <R_GridDatePickerColumn FieldName="@nameof(_GSM07500ViewModel.loEntity.DEND_DATE)" HeaderText=@_localizer["_endDate"]  R_EnableAdd="false" R_EnableEdit="false" Width="50px"/>
                    <R_GridTextColumn FieldName="@nameof(_GSM07500ViewModel.loEntity.CUPDATE_BY)" HeaderText=@_localizer["_updateBy"]  R_EnableAdd="false" R_EnableEdit="false" Width="40px"/>
                    <R_GridTextColumn FieldName="@nameof(_GSM07500ViewModel.loEntity.DUPDATE_DATE)" HeaderText=@_localizer["_updateDate"]  R_EnableAdd="false" R_EnableEdit="false" Width="50px"/>
                    <R_GridTextColumn FieldName="@nameof(_GSM07500ViewModel.loEntity.CCREATE_BY)" HeaderText=@_localizer["_createdBy"]  R_EnableAdd="false" R_EnableEdit="false" Width="40px"/>
                    <R_GridTextColumn FieldName="@nameof(_GSM07500ViewModel.loEntity.DCREATE_DATE)" HeaderText=@_localizer["_createdDate"]  R_EnableAdd="false" R_EnableEdit="false" Width="50px"/>
                </R_GridColumns>
            </R_Grid>
        </R_StackLayout>
        <R_StackLayout Spacing="4" Row="true">
            <R_ItemLayout>
                <R_SaveButton R_Conductor="_conductorGridPeriodRef">@_localizer["_save"]</R_SaveButton>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_CancelButton R_Conductor="@_conductorGridPeriodRef">@_localizer["_cancel"]</R_CancelButton>
            </R_ItemLayout>
        </R_StackLayout>
    </R_StackLayout>
</R_StackLayout>

 <R_StackLayout Row="true">
     <R_ItemLayout>
         <R_AddButton R_Conductor="_conductorGridPeriodRef">@_localizer["_add"]</R_AddButton>
     </R_ItemLayout>
     <R_ItemLayout>
         <R_DeleteButton R_Conductor="_conductorGridPeriodRef">@_localizer["_delete"]</R_DeleteButton>
     </R_ItemLayout>
 </R_StackLayout>


</R_StackLayout>
<R_Conductor @ref="@_conductorGridPeriodRef"
             R_ViewModel="@_GSM07510ViewModel"
             R_IsHeader="true"
             R_ServiceGetRecord="@ConductorPeriod_ServiceGetRecord"
             R_ConvertToGridEntity="R_ConvertToGridEntity"
             R_AfterAdd="GetOnClickAfterAddButton"
             R_Display="@ConductorPeriod_Display"
             R_SetAdd="@GridPeriod_SetAdd"
             R_ServiceSave="@Grid_ServiceSave"
             R_AfterSave="@Grid_AfterSave"
             R_BeforeDelete="@BeforeDelete"
             R_ServiceDelete="@Grid_ServiceDelete"
             >
</R_Conductor>

<R_ConductorGrid @ref="_conductorGridPeriodDetailRef"
                 R_ViewModel="_GSM07500ViewModel"
                 R_ConductorParent="_conductorGridPeriodRef">
</R_ConductorGrid>