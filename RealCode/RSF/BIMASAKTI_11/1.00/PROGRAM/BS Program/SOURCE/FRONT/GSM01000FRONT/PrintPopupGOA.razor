 @page "/PopupPrintGOA"
 @using GSM01000Common.DTOs;
 @inherits R_Page
 @attribute [R_BlazorFrontEnd.Controls.Attributes.R_Page(Title = "Print GOA")]
 @using GSM01000FrontResources;
@using R_BlazorFrontEnd.Interfaces;
@inject R_ILocalizer<ResourcesDummyCls> _localizer


 <R_StackLayout>
     <R_StackLayout Row="true">
         <R_ItemLayout col="3">
            <R_Label Class="fw-bold">@_localizer["_printGOA"]</R_Label>
         </R_ItemLayout>
     </R_StackLayout>
    
     <R_StackLayout Row="true">
         <R_ItemLayout col="4">
            <R_Label>@_localizer["_fromGOA"]</R_Label>
         </R_ItemLayout>
        <R_ItemLayout col="3">
             <R_TextBox @bind-Value="@_GSM01300ViewModel.loPrint.CGOA_CODE_FROM"
                        R_ConductorSource="@_conductorRef"
                        Enabled="false" />
         </R_ItemLayout>
          <R_ItemLayout col="1">
              <R_Lookup R_Before_Open_Lookup="@R_BeforeOpenLookUpFrom" R_After_Open_Lookup="R_AfterOpenLookUpFrom" @ref="GOALookUp"> ... </R_Lookup>
          </R_ItemLayout>
         <R_ItemLayout col="3">
             <R_TextBox @bind-Value="@_GSM01300ViewModel.loPrint.CGOA_CODE_NAME_FROM"
                        R_ConductorSource="@_conductorRef"
                        Enabled="false" />
         </R_ItemLayout>

     </R_StackLayout>

     <R_StackLayout Row="true">
         <R_ItemLayout col="4">
            <R_Label>@_localizer["_toGOA"]</R_Label>
         </R_ItemLayout>
         <R_ItemLayout col="3">
             <R_TextBox @bind-Value="@_GSM01300ViewModel.loPrint.CGOA_CODE_TO"
                        R_ConductorSource="@_conductorRef"
                        Enabled="false"/>
         </R_ItemLayout>
         <R_ItemLayout col="1">
             <R_Lookup R_Before_Open_Lookup="@R_BeforeOpenLookUpTo" R_After_Open_Lookup="R_AfterOpenLookUpTo" @ref="GOALookUp"> ... </R_Lookup>
         </R_ItemLayout>
         <R_ItemLayout col="3">
             <R_TextBox @bind-Value="@_GSM01300ViewModel.loPrint.CGOA_CODE_NAME_TO"
                        R_ConductorSource="@_conductorRef"
                        Enabled="false"/>
         </R_ItemLayout>
     </R_StackLayout>
        
            <R_StackLayout Row="true">
                 <R_ItemLayout col="4">
                    <R_Label>@_localizer["_groupOfAccCategory"]</R_Label>
                 </R_ItemLayout>
                  <R_ItemLayout>
                      <R_CheckBox @bind-Value="_GSM01300ViewModel.loPrint.LBALANCE_SHEET"
                                 R_ConductorSource="_conductorRef">
                      </R_CheckBox>
                  </R_ItemLayout>
                 <R_ItemLayout col="3">
                    <R_Label>@_localizer["_balanceSheet"]</R_Label>
                 </R_ItemLayout>
                  <R_ItemLayout>
                     <R_CheckBox @bind-Value="_GSM01300ViewModel.loPrint.LINCOME_STATEMENT"
                                 R_ConductorSource="_conductorRef">
                      </R_CheckBox>
                  </R_ItemLayout>
                 <R_ItemLayout col="3">
                    <R_Label>@_localizer["_incomeStatement"]</R_Label>
                 </R_ItemLayout>
            </R_StackLayout>
        
             <R_StackLayout Row="true">
                 <R_ItemLayout col="4">
            <R_Label>
                <R_Label>@_localizer["_sortBy"]</R_Label>
            </R_Label>
                 </R_ItemLayout>
        
                 <R_ItemLayout col="4">
                     <R_RadioGroup Data="@_GSM01300ViewModel.SortBy"
                                   @bind-Value="@_GSM01300ViewModel.loPrint.CSHORT_BY"
                                   ValueField="@nameof(GSM01000PrintParamCOADTO.CSHORT_BY)"
                                   TextField="@nameof(GSM01000PrintParamCOADTO.SortBy)"
                                   R_ConductorSource="@_conductorRef">
                     </R_RadioGroup>
                 </R_ItemLayout>
        
             </R_StackLayout>
        
        
     <R_StackLayout Row="true">
         <R_ItemLayout>
             <R_CheckBox @bind-Value="@_GSM01300ViewModel.loPrint.LPRINT_GL_ACCOUNT"
                         R_ConductorSource="@_conductorRef">
             </R_CheckBox>
         </R_ItemLayout>
         <R_ItemLayout>
            <R_Label>@_localizer["_printAccount"]</R_Label>
         </R_ItemLayout>
     </R_StackLayout>
    
     <R_StackLayout Row="true">
         <R_ItemLayout>
             <R_CheckBox @bind-Value="@_GSM01300ViewModel.loPrint.LPRINT_INACTIVE"
                         R_ConductorSource="@_conductorRef">
             </R_CheckBox>
         </R_ItemLayout>
         <R_ItemLayout>
            <R_Label>@_localizer["_printInactiveAcc"]</R_Label>
         </R_ItemLayout>
 </R_StackLayout>
</R_StackLayout>
<R_StackLayout>
    <R_ItemLayout col="1">

    </R_ItemLayout>
</R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
         <R_ItemLayout col="6">
             <R_Button OnClick="Button_OnClickProcessAsync">
                 @_localizer["_print"]
             </R_Button>
         </R_ItemLayout>
         <R_ItemLayout col="4">
             <R_Button OnClick="Button_OnClickCloseAsync">
                 @_localizer["_close"]
             </R_Button>
         </R_ItemLayout>
     </R_StackLayout>
